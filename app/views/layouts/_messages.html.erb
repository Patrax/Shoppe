<div class="row">
  <div class="col-md-10">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %> alert-dismissable">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&#215;</button>
      </div>
    <% end %>
  </div>
</div>